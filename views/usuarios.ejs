<%- include('template/top', {tituloWeb: 'Usuarios' }) %>

    <div class="container">
        <h1>Usuarios</h1>
        <div class="d-grid">
            <a href="/usuarios/crear" class="btn btn-primary">Crear</a>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Email</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (arrayUsuarios.length> 0) { %>
                        <% arrayUsuarios.forEach(element=> { %>
                            <tr>
                                <th scope="row">
                                    <%= element.id%>
                                </th>
                                <td>
                                    <%= element.name%>
                                </td>
                                <td>
                                    <%= element.email%>
                                </td>
                                <td>
                                    <a href="/usuarios/<%= element.id %>" type="button"
                                        class="btn btn-primary">Editar</a>
                                </td>
                            </tr>
                            <% }) %>
                                <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('template/footer')%>